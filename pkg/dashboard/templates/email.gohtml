{{ define "email" }}
<aside class="email-box" id="email-box">
  <details open>
    <summary class="--hideMarker">
      <h2 class="email-box__toggle-title">
        Add cost estimates to your Goldilocks dashboard!
        <i aria-hidden="true" class="fas fa-fw fa-angle-down --showWhenClosed"></i
        ><i aria-hidden="true" class="fas fa-fw fa-angle-up --showWhenOpen"></i>
      </h2>
    </summary>

    <form class="email-box__content">
      <p>Enter your email to get a free estimate of the cost impact of applying Goldilocksâ€™ recommendations.</p>
      <label class="email-box__email-label">
        <input id="email-box__email-input" class="email-box__email-input" type="email" />
        <span id="email-box__email-label-content">Email</span>
      </label>
      <label class="email-box__checkbox-label">
        <input type="checkbox" id="email-box__checkbox">
        <span class="email-box__checkbox-content">By entering your email address, you acknowledge that we may use it as our Privacy Policy describes.</span>
      </label>
      <button type="submit" class="email-box__submit-btn" id="email-box__submit-btn" disabled>Submit</button>
    </form>
  </details>
</aside>
{{ end }}
