<!DOCTYPE html>
<html lang="en-US">
<head>
  {{ template "head" . }}

  {{/* TODO: Is this next script actually needed? */}}
  <script>
    window.summaryData = {{ .JSON }};
  </script>
</head>

<body class="layoutSidebar">
  <header class="layoutSidebar__sidebar">
    {{ template "navbar" "--stack" }}

    <nav>
      <ul class="flow" role="list">
        <li>
          <a class="button button--2 buttonIcon" href="/">
            <i aria-hidden="true" class="fas fa-fw fa-list-ul"></i>
            List All Namespaces
          </a>
        </li>
        <li>
          <a class="button button--2 buttonIcon" href="/dashboard">
            <i aria-hidden="true" class="far fa-fw fa-eye"></i>
            Detail All Namespaces
          </a>
        </li>
        <li>
          <a class="button button--2 buttonIcon" href="#glossary">
            <i aria-hidden="true" class="fas fa-fw fa-book"></i>
            Glossary
          </a>
        </li>
      </ul>
    </nav>
  </header>

  <main class="layoutSidebar__main dashboard">
    <h1 class="dashboard__heading visually-hidden">Namespace Details</h1>

    {{ range $nsName, $nsSummary := .Data.Namespaces }}
      {{ template "namespace" $nsSummary }}
    {{end}}

    <aside id="glossary">
      <h2>Glossary</h2>

      <dl>
        <div>
          <dt>QoS</dt>
          <dd>
            Quality of Service
          </dd>
        </div>

        <div>
          <dt>Guaranteed</dt>
          <dd>
            Info goes here
          </dd>
        </div>

        <div>
          <dt>Burstable</dt>
          <dd>
            Info goes here
          </dd>
        </div>
      </dl>
    </aside>

    <div class="test">
      <h1>Heading 1</h1>
      <h2>Heading 2</h2>
      <h3>Heading 3</h3>
      <h4>Heading 4</h4>
      <h5>Heading 5</h5>
      <h6>Heading 6</h6>
      <div>Body</div>
    </div>
  </main>

  <footer class="layoutSidebar__footer">
    {{ template "footer" . }}
  </footer>
</body>
</html>
