<!DOCTYPE html>
<html lang="en-US">
<head>
  {{ template "head" . }}

  <script>
    window.summaryData = {{ .JSON }};
  </script>
</head>

<body>
  <header>
    {{ template "navbar" . }}

    <nav aria-label="Secondary" class="--lineup">
      <ul>
        <li>
          <a href="/">
            <i aria-hidden="true" class="fas fa-arrow-left"></i>
            All Namespaces
          </a>
        </li>
        <li>
          <a href="/dashboard">
            All Details
            <i aria-hidden="true" class="fas fa-arrow-right"></i>
          </a>
        </li>
      </ul>
    </nav>
  </header>

  <main class="flow">
    <h1>Namespace Details</h1>

    <details>
      <summary>
        <h2>Glossary</h2>
      </summary>
      
      <dl>
        <div>
          <dt>QoS</dt>
          <dd>
            Quality of Service
          </dd>
        </div>

        <div>
          <dt>Guaranteed</dt>
          <dd>
            Info goes here
          </dd>
        </div>

        <div>
          <dt>Burstable</dt>
          <dd>
            Info goes here
          </dd>
        </div>
      </dl>
    </details>

    <hr />

    {{ range $nsName, $nsSummary := .Data.Namespaces }}
      {{ template "namespace" $nsSummary }}
    {{end}}
  </main>

  <footer>
    {{ template "footer" . }}
  </footer>
</body>
</html>
