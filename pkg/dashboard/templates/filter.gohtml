{{define "filter"}}
<form aria-controls="js-filter-container" id="js-filter-form" role="search">
    <label class="visually-hidden" for="namespace-filter-input">
        Filter namespaces
    </label>

    <input
        aria-controls="js-filter-container"
        id="namespace-filter-input"
        name="q"
        placeholder="Filter Namespaces..."
        type="search"
    />

    <button type="submit">
        <i aria-hidden="true" class="fas fa-fw fa-search"></i>
        <span class="visually-hidden">Search</span>
    </button>
</form>
{{end}}
