<!DOCTYPE html>
<html lang="en-US">
<head>
  {{ template "head" . }}

  <script>
    window.data = {{ .JSON }};
  </script>
</head>

<body class="layoutSidebar">
  <header class="layoutSidebar__sidebar">
    {{ template "navbar" . }}

    <nav>
      <ul class="navList" role="list">
        <li>
          <a class="linkIcon" href="/dashboard">
            <i aria-hidden="true" class="far fa-fw fa-eye"></i>
            Detail All Namespaces
          </a>
        </li>
      </ul>
    </nav>

    {{ if gt (len .Data) 1 }}
    {{ template "filter" . }}
    {{ end }}
  </header>

  <div class="layoutSidebar__main">
    <main class="verticalRhythm">
      <h1>Namespaces</h1>

      <p class="summary">{{len .Data}} namespaces found</p>

      {{ if lt (len .Data) 1 }}
      <article>
        <p>No namespaces are labelled for use by Goldilocks. Try labelling one with <code>kubectl label ns NAMESPACE_NAME goldilocks.fairwinds.com/enabled=true</code></p>
      </article>

      {{ else }}
      <ul aria-live="off" class="namespaceList" id="js-filter-container">
        {{ range .Data }}
        <li data-filter="{{ .Name }}">
          <a class="buttonLink --withIcon" href="/dashboard/{{ .Name }}">
            {{ .Name }}
            <i aria-hidden="true" class="fas fa-fw fa-chevron-right"></i>
          </a>
        </li>
        {{ end }}
      </ul>
      {{end}}
    </main>

    <footer>
      {{ template "footer" . }}
    </footer>
  </div>
</body>
</html>
